---
[{% for post in site.posts %}
    {
      "title"      : "{{ post.title | escape }}",
      "categories" : {{ post.categories | jsonify }},
      "url"        : "{{ post.url }}",
      "date"       : "{{ post.date }}",
      "excerpt"    : "{{ post.excerpt }}"
    } {% unless forloop.last %},{% endunless %}
{% endfor %}]
