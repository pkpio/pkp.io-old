---
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "category" : "{{ post.category }}",
      "tags"     : [
			{% for tag in post.tags %} 
				"{{ tag }}"{% unless forloop.last %},{% endunless %}
			{% endfor %}
		   ],
      "url"      : "{{ post.url }}",
      "date"     : "{{ post.date }}",
      "excerpt"  : "{{ post.excerpt }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
